<h1>Write a review for <%= @restaurant.name %></h1>
<%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :rating %>
  <%= f.input :content %>
  <%= f.submit "Submit review", class: "btn btn-success" %>
<% end %>
<%= link_to "Back", restaurant_path(@restaurant), class: "btn btn-warning" %>
